{
  LinearLayout;
  gravity="center";
  layout_height="fill";
  layout_width="fill";
  {
    ScrollView;
    layout_width="fill";
    layout_height="fill";
    VerticalScrollBarEnabled=false;
    {
      LinearLayout;
      layout_gravity="center|top";
      layout_height="fill";
      orientation="vertical";
      {
        LinearLayout;
        {
          CardView;
          radius="20dp";
          background="#FFFFFF";
          layout_width="150dp";
          CardElevation="5dp";
          layout_height="180dp";
          layout_margin="20dp";
          {
            LinearLayout;
            layout_gravity="center";
            layout_width="160dp";
            orientation="vertical";
            gravity="center";
            style="?android:attr/buttonBarButtonStyle";
            id="id_search";
            layout_height="200dp";
            {
              ImageView;
              src="res/icon/Illustration/search.png";
            };
            {
              TextView;
              textSize="18sp";
              text="ID搜索";
              textColor="#2196F3";
            };
            {
              TextView;
              text="查询各种类型的ID";
              textColor="#90CAF9";
            };
          };
        };
        {
          CardView;
          radius="20dp";
          background="#FFFFFF";
          layout_width="150dp";
          CardElevation="5dp";
          layout_marginLeft="0dp";
          layout_height="180dp";
          layout_margin="20dp";
          {
            LinearLayout;
            layout_gravity="center";
            layout_width="160dp";
            orientation="vertical";
            gravity="center";
            style="?android:attr/buttonBarButtonStyle";
            id="pallette";
            layout_height="200dp";
            {
              ImageView;
              src="res/icon/Illustration/pallette.png";
            };
            {
              TextView;
              textSize="18sp";
              text="调色板";
              textColor="#2196F3";
            };
            {
              TextView;
              text="生成任意颜色代码";
              textColor="#90CAF9";
            };
          };
        };
      };
      {
        LinearLayout;
        {
          CardView;
          radius="20dp";
          background="#FFFFFF";
          layout_width="150dp";
          layout_marginTop="0dp";
          CardElevation="5dp";
          layout_height="180dp";
          layout_margin="20dp";
          {
            LinearLayout;
            layout_gravity="center";
            layout_width="160dp";
            orientation="vertical";
            gravity="center";
            style="?android:attr/buttonBarButtonStyle";
            id="gradient_color";
            layout_height="200dp";
            {
              ImageView;
              src="res/icon/Illustration/gradient.png";
            };
            {
              TextView;
              textSize="18sp";
              text="文字渐变";
              textColor="#2196F3";
            };
            {
              TextView;
              text="一键生成文字渐变代码";
              textColor="#90CAF9";
            };
          };
        };
        {
          CardView;
          layout_width="150dp";
          radius="20dp";
          background="#FFFFFF";
          CardElevation="5dp";
          layout_marginTop="0dp";
          layout_marginLeft="0dp";
          layout_height="180dp";
          layout_margin="20dp";
          {
            LinearLayout;
            layout_gravity="center";
            layout_width="160dp";
            orientation="vertical";
            gravity="center";
            style="?android:attr/buttonBarButtonStyle";
            id="material_export";
            layout_height="200dp";
            {
              ImageView;
              src="res/icon/export.png";
            };
            {
              TextView;
              textSize="18sp";
              text="游戏素材提取";
              textColor="#2196F3";
            };
            {
              TextView;
              text="一键提取游戏资源";
              textColor="#90CAF9";
            };
          };
        };
      };
    };
  };
};
